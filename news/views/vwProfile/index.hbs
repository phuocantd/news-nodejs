{{#section 'css'}}
<title>Register page</title>
<link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}

{{#section 'js'}}
<script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
<script>
    $(function () {

        $('#txtDOB').datetimepicker({
            format: 'd/m/Y',
            timepicker: false,
            mask: true,
            defaultDate: new Date(1434544649384)
        });
        $('#txtDOB').data("dateTimePicker").date(dob);
        $('#registerForm').validate({
            rules: {
                name: {
                    required: true,
                },
                email: {
                    required: true,
                    email: true
                },
                address: {
                    required: true,
                },
                phone: {
                    required: true,
                    number: true,
                    minlength: 10,
                    maxLength: 10,
                },
                dob: {
                    required: true
                },
            },
            messages: {
                name: {
                    required: 'Valid full name is required.',
                },
                email: {
                    required: 'Please enter a valid email address.',
                    email: 'Please enter a valid email address.'
                },
                address: {
                    required: 'Please enter a valid address.',
                },
                phone: {
                    required: 'Please enter a valid phone number.',
                    number: 'Your phone number must be number type.',
                    minlength: 'Your phone number must have 10 digits.',
                    maxlength: 'Your phone number must have 10 digits.',
                },
                dob: {
                    required: 'Valid date of birth is required.',
                },
            },
            errorElement: 'small',
            errorClass: 'help-block text-danger',
            highlight: function (e) {
                $(e).removeClass('is-valid').addClass('is-invalid');
            },
            unhighlight: function (e) {
                $(e).removeClass('is-invalid').addClass('is-valid');
            }
        });
    })
</script>
{{/section}}

<form novalidate action="update" method="POST" id="registerForm">
    <div class="card shadow">
        <h3 class="card-header">
            <strong>Edit profile</strong>
        </h3>
        <div class="card-body">
            <h5 class="mb-3">Account</h5>
            <div class="form-group">
                <label for="txtUsername">Your Username</label>
                <input readonly value="{{authUser.UserName}}" type="text" class="form-control" id="txtUsername"
                    name="username" autofocus>
            </div>

            <hr class="mb-4">
            <h5 class="mb-3">Information</h5>
            <div class="form-group">
                <label for="txtName">Name</label>
                <input autofocus value="{{authUser.Name}}" type="text" class="form-control" id="txtName" name="name">
            </div>
            <div class="form-group">
                <label for="txtEmail">Email</label>
                <input value="{{authUser.Email}}" type="text" class="form-control" id="txtEmail" name="email">
            </div>
            <div class="form-group">
                <label for="txtAddress">Address</label>
                <input value="{{authUser.Address}}" type="text" class="form-control" id="txtAddress" name="address">
            </div>
            <div class="form-group">
                <label for="txtPhone">Phone</label>
                <input value="{{authUser.Phone}}" type="text" class="form-control" id="txtPhone" name="phone">
            </div>
            <div class="form-group">
                <label for="txtDOB">Date of birth</label>
                <input value="{{dob}}" type="text" class="form-control" id="txtDOB" name="dob">
            </div>
        </div>
        <div class="card-footer text-right">
            <button type="submit" class="btn btn-lg btn-success btn-block">
                <i class="fa fa-check" aria-hidden="true"></i>
                Update
            </button>
        </div>
    </div>
</form>