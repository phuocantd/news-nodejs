{{#section 'js'}}
{{!-- Tinymce --}}
<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js"></script>
<script>
    $(function () {
        tinymce.init({
            selector: '#postContent',
            height: 500,
            menubar: false,
            plugins: 'paste image link autolink lists table media',
            toolbar: [
                'undo redo | bold italic underline strikethrough | numlist bullist', 'forecolor backcolor', 'table link image media',
            ]
        });
    });
</script>

{{!-- Bootstrap file input --}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/js/fileinput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/themes/fas/theme.min.js"></script>
<script>
    $(function () {
        $('#input-pic').fileinput({
            theme: 'fas',
            dropZoneEnabled: false,
            allowedFileExtensions: ['png', 'jpg', 'gif'],
            uploadUrl: '/writter/writePost',
            uploadAsync: false,
        });
    });
</script>
{{/section}}

{{#section 'css'}}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/css/fileinput.min.css"
    type="text/css">
{{/section}}

<div class="container mb-5">
    <div class="container-post-info shadow-lg bg-light p-3">
        <form method="POST">
            <div class="form-group">
                <label><b>Title:</b></label>
                <input readonly type="text" class="form-control" name="title" value="{{{content.Title}}}">
            </div>
            <div class="row form-group">
                <div class="col form-group">
                    <label><b>Tags:</b></label>
                    <select class="custom-select" name="tags">
                        <option selected>News</option>
                        <option>Phones</option>
                        <option>&emsp;iOS</option>
                        <option>&emsp;Android</option>
                        <option>Laptops</option>
                        <option>&emsp;Asus</option>
                        <option>&emsp;Dell</option>
                        <option>&emsp;HP</option>
                        <option>&emsp;MSI</option>
                        <option>Technology</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label><b>Description:</b></label>
                <textarea readonly rows="3" class="form-control" name="description">{{{content.Description}}}</textarea>
            </div>
            <div class="form-group">
                <label><b>Header picture:</b></label>
                <div class="file-loading">
                    <input id="input-pic" name="input-pic" type="file" multiple>
                </div>
            </div>
            <div class="form-group">
                <label><b>Content:</b></label>
                <textarea readonly class="form-control" id="postContent" name="content"
                    value="{{{content.Content}}}"></textarea>
            </div>
        </form>
    </div>
</div>