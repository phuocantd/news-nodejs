<div class="post-picture">
    <img src="/post_pictures/{{singleContent.PostId}}.jpg" alt="ERROR" title="{{singleContent.Title}}">
</div>
<div class="container px-5">
    <!-- News into categories -->
    <div class="row my-4">
        <!-- Post content -->
        <div class="col-8 pl-0 post-content">
            {{!-- Header - Description - Tags --}}
            <h1>
                <strong>
                    {{singleContent.Title}}
                </strong>
            </h1>
            <h4>
                {{singleContent.Description}}
            </h4>
            <div class="post-info text-secondary d-flex my-4">
                <div class="writer mr-3">
                    <i class="fas fa-user-edit"></i>
                    <span>{{singleContent.Name}}</span>
                </div>
                <div class="post-date mr-3">
                    <i class="fas fa-calendar-alt"></i>
                    <span>{{{time}}}</span>
                </div>
                <div class="tag">
                    <i class="fas fa-tag"></i>
                    {{#each this.multipleContent}}
                    <a class="mr-2 text-secondary" href="#">{{{TagName}}}</a>
                    {{/each}}
                </div>
            </div>

            {{{singleContent.Content}}}

            <!-- Facebook like & share buttons -->
            <div class="fb-like" data-href="https://phuocantd.github.io/news/post/" data-width="" data-layout="standard"
                data-action="like" data-size="small" data-show-faces="true" data-share="true"></div>
            <!-- Facebook comments -->
            <div class="fb-comments" data-href="https://phuocantd.github.io/news/" data-width="" data-numposts="5">
            </div>
        </div>
        {{!-- Right panel --}}
        <div class="col-4 pl-0">
            <div class="sticky-top" style="top: 80px; z-index: 100">
                <div class="connected-info">
                    <h6 class="underline-seperate">
                        <span class="px-1">STAY CONNECTED</span>
                    </h6>
                    <div class="social-facebook my-3">
                        <a href="https://facebook.com/" class="row">
                            <div class="col-2"><i class="fab fa-facebook-f"></i></div>
                            <div class="col-6"><span>9999 Fans</span></div>
                            <div class="col-4 text-right"><span><strong>LIKE</strong></span></div>
                        </a>
                    </div>
                    <div class="social-twitter my-3">
                        <a href="https://twitter.com/" class="row">
                            <div class="col-2"><i class="fab fa-twitter"></i></div>
                            <div class="col-6"><span>9999 Followers</span></div>
                            <div class="col-4 text-right"><span><strong>FOLLOW</strong></span></div>
                        </a>
                    </div>
                    <div class="social-youtube my-3">
                        <a href="https://www.youtube.com/" class="row">
                            <div class="col-2"><i class="fab fa-youtube"></i></div>
                            <div class="col-6"><span>9999 Subscribers</span></div>
                            <div class="col-4 text-right"><span><strong>SUBSCRIBE</strong></span></div>
                        </a>
                    </div>
                </div>
                <div class="related-news">
                    <h6 class="underline-seperate">
                        <span class="px-1">TOP NEWS</span>
                    </h6>
                    <ul class="nav">
                        {{#each relatedPost}}
                        <li class="nav-item my-2">
                            <a href="/post/{{PostId}}">{{Title}}</a>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

{{#section 'js'}}
<!-- Facebook plugin -->
<div id="fb-root"></div>
<script async defer crossorigin="anonymous"
    src="https://connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v3.3"></script>
{{/section}}